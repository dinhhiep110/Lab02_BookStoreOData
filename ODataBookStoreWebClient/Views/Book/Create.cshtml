@model ODataBookStore.Models.Book
@{
    ViewData["Title"] = "Create";
    List<string> cate = (List<string>)ViewData["Category"];
}
<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <h3><b>Location</b> </h3>
            <div class="form-group">
                <label asp-for="@Model.Location.City" class="control-label"></label>
                <input asp-for="@Model.Location.City" class="form-control" />
                <span asp-validation-for="@Model.Location.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Location.Street" class="control-label"></label>
                <input asp-for="@Model.Location.Street" class="form-control" />
                <span asp-validation-for="@Model.Location.Street" class="text-danger"></span>
            </div>
            <h3><b>Press</b></h3>
            <div class="form-group">
                <label asp-for="@Model.Press.Id" class="control-label"></label>
                <input asp-for="@Model.Press.Id" class="form-control" />
                <span asp-validation-for="@Model.Press.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Press.Name" class="control-label"></label>
                <input asp-for="@Model.Press.Name" class="form-control" />
                <span asp-validation-for="@Model.Press.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Press.Category" class="control-label"></label>
                <select asp-for="@Model.Press.Category" class="form-control">
                    @foreach (var category in @cate)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

